# {{ ansible_managed }}

# Prefer a user pyenv over a system wide install
if [ -s "${HOME}/.pyenv/bin" ]; then
    pyenv_root="${HOME}/.pyenv"
else
    pyenv_root={{ pyenv_install_dir }}
fi

export PYENV_ROOT="${pyenv_root}"
if [ -n "${pyenv_root}" ]; then
    export PATH="${pyenv_root}/bin:$PATH"
    eval "$(pyenv init -)"
fi
